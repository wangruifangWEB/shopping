@import "../tpls/search/search.wxss";

image {
  width: 100%;
  display: block;
}

.nine {
  margin: 15rpx;
  position: relative;
}

.nine-box {
  width: 100%;
  position: absolute;
  top: 0;
}

.nine-box view {
  width: 33.3%;
  height: 240rpx;
  top: 0;
  float: left;
}

.nine-box view view {
  width: 33.3%;
}

.nine-box .jump {
  width: 100%;
  height: 100%;
  opacity: 0;
}

/* 轮播图 */

.banner-item image {
  width: 100%;
}

.swiper {
  height: 130px;
  margin-bottom: 15rpx;
}

.swiper .wx-swiper-dot-active {
  width: 30rpx;
  border-radius: 10rpx;
}

/* 新闻 */

.new-container {
  background: #ececec;
  margin-top: 20rpx;
}

.new-box {
  padding-bottom: 10rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.new-box image {
  width: 100%;
  height: 369rpx;
}

.new-text {
  padding: 5rpx;
}

.new-text text {
  width: 100%;
  margin: 5rpx auto;
  display: block;
}

.title {
  box-sizing: border-box;
  font-weight: bold;
  font-size: 32rpx;
  padding: 0 20rpx;
  line-height: 60rpx;
}

.text {
  box-sizing: border-box;
  color: #666;
  font-size: 28rpx;
  padding: 0 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  text-align: justify;
}

/*coupons  */

.coupons {
  width: 100%;
  background-color: #ff5b62;
  display: flex;
  font-size: 14rpx;
  justify-content: center;
  align-items: center;
}

.couponItem {
  color: #fff;
  background-color: #ff5b62;
  border: 1px solid #fff;
  margin: 15rpx;
}

.couponNum {
  margin: 0 5rpx;
  font-size: 60rpx;
}

.couponItem view {
  float: right;
}

.itemMargin {
  margin-right: 10rpx;
}

.couponItem {
  border-radius: 8rpx;
}

.couponItem .couponTicket {
  font-size: 28rpx;
  margin-bottom: 3rpx;
}

.coupons .couponItem:nth-child(2) {
  margin: 0 14rpx;
}

.couponBg {
  color: #ff6a70;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 5rpx 10rpx;
  position: relative;
  top: 8rpx;
}

.imgBg {
  height: 581rpx;
}

.fontShow{
  text-align: center;
  margin:30rpx 0;
}