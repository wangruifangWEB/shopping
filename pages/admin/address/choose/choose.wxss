page {
  background: #fff;
}

form {
  width: 90%;
  margin: 0 auto;
  display: block;
  font-size: 32rpx;
  margin-top: 10rpx;
  border-top: 1rpx solid #d1d1d1;
}

.address-box {
  border-bottom: 1rpx solid #d1d1d1;
  padding: 25rpx 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  -webkit-overflow-scrolling: touch;
  overflow-x: scroll;
}

form view image {
  width: 40rpx;
  margin-right: 10rpx;
}

.btn {
  background: #ff5b62;
  color: #fff;
  border: none;
  width: 70%;
  margin: 20rpx auto;
}

.address {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.address text {
  display: block;
}

.address text:last-of-type {
  color: #999;
  font-size: 22rpx;
}

.address image {
  margin-right: 16rpx;
}

/* 右删除 */
.del {
  color: #fff;
  width: 180rpx;
  line-height: 70rpx;
  padding: 30rpx 0;
  margin-top:20rpx;
  text-align: center;
  z-index: 4;
  position: absolute;
  top: -20rpx;
  right: -220rpx;
  background-color: #e64340;
}
