.coupon-title {
  background: #fff;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 99;
}

.coupon-title view {
  display: inline-block;
  width: 50%;
  text-align: center;
  line-height: 82rpx;
  border-bottom: 8rpx transparent solid;
}

.coupon-title view.active {
  border-color: #ff5b62;
  color: #ff5b62;
  font-size: 36rpx;
}

.coupon-box {
  width: 90%;
  margin: 0 auto;
  margin-top: 120rpx;
}

.history .coupon {
  font-size: 32rpx;
  border-radius: 8rpx;
  padding: 30rpx;
  padding-top: 70rpx;
  background: #fff url(data:image/png;base64,) no-repeat;
  background-repeat: repeat-x;
  background-size: 40rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.coupon {
  font-size: 32rpx;
  border-radius: 8rpx;
  padding: 30rpx;
  padding-top: 70rpx;
  background: #fff url(data:image/png;base64,) no-repeat;
  background-repeat: repeat-x;
  background-size: 40rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.coupon image {
  width: 150rpx;
  right: 10rpx;
  position: absolute;
  bottom: -20rpx;
}

.title text {
  color: #ff5b62;
}

.title text:nth-last-of-type(2) {
  font-size: 60rpx;
  padding: 0 20rpx;
}

.text {
  padding-top: 10rpx;
}

.text text {
  display: block;
  color: #999;
  line-height: 1.5;
}

.coupon>text {
  position: absolute;
  color: #fff;
  display: block;
  text-align: right;
  top: 5rpx;
  right: 0;
  width: 100%;
  padding: 0 30rpx;
}

.history .coupon text {
  color: #999;
}
