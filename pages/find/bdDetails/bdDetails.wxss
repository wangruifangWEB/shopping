Page {
  background-color: #fff;
}

.container {
  padding: 0 30rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.my-photo {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  display: block;
  overflow: hidden;
}

.nickName {
  margin: 0 80rpx 0 20rpx;
}

.userMsg {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0;
}

.userMsg text {
  color: #c9c9c9;
}

.bdContent {
  margin-top: 40rpx;
}

.bdContent .details {
  color: #c4c4c4;
  font-size: 24rpx;
  text-indent: 50rpx;
  text-align: left;
  margin: 40rpx 0;
  line-height: 48rpx;
}

.bdContent .title {
  color: #2f2f2f;
  font-size: 28rpx;
  font-weight: bold;
}

.textInent {
  text-indent: 50rpx;
}

.bdMsg {
  color: #525252;
  font-size: 26rpx;
  line-height: 38rpx;
  text-indent: 50rpx;
  overflow: hidden;
}

.bdMsg view {
  line-height: 48rpx;
}

.time {
  color: #9c9c9c;
  padding-top: 20px;
  display: flex;
}

.bdMessage {
  color: #9c9c9c;
  margin-top: 60rpx;
}

.bdMessage view {
  vertical-align: middle;
  display: flex;
  margin: 45rpx 0 45rpx 0;
}

.bdMessage text {
  font-size: 26rpx;
  margin-top: 5rpx;
}

.bdMessage view input {
  width: 520rpx;
  height: 55rpx;
  border: 1px solid #d1d1d1;
  border-radius: 10rpx;
  line-height: 48rpx;
  padding-left: 10rpx;
}

.bdMessage image {
  width: 17rpx;
  height: 17rpx;
  margin: 10rpx 5rpx;
}

.release {
  color: #fff;
  width: 410rpx;
  height: 60rpx;
  background-color: #ff5b62;
  border-radius: 8rpx;
  margin: 40rpx 0 40rpx 0;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  justify-content: center;
  position: relative;
  left: 210rpx;
}

.wxParse-p {
  text-align: justify;
}
