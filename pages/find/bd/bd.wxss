@import "../../tpls/search/search.wxss";

.bdList {
  font-family: '微软雅黑';
  background-color: #fff;
  padding:0 40rpx;
  box-sizing: border-box;
}

.bdLeft_lf .title {
  width:100%;
  font-size: 29rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: block;
}

.bdLeft_lf .details {
  width:98%;
  color: #999;
  font-size: 22rpx;
  display: -webkit-box;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.date {
  color: #c9c9c9;
  font-size: 20rpx;
}

.bdRight_rt {
  float: right;
}

.bdRight_rt image {
  margin: 60rpx 14rpx 0 0;
}

.release {
  color: #fff;
  width: 430rpx;
  height: 60rpx;
  background-color: #ff5b62;
  border-radius: 8rpx;
  margin: 40rpx auto;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  justify-content: center;
}

.touch-item {
  font-size: 14px;
  display: flex;
  border-bottom: 1px solid #ccc;
  width: 100%;
  padding:40rpx 0 10rpx 0;
}

.bdList .touch-item:last-child {
  border-bottom: none;
}

.touch-item image {
  width: 36rpx;
  height: 33rpx;
}

.touch-item .timeImg {
  width: 20rpx;
  height: 20rpx;
  margin: 8rpx 10rpx 0 0;
}

.content {
   width: 100%;
}

