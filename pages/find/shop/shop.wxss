@import "../../tpls/search/search.wxss";
@import "../../tpls/swiper/swiper.wxss";

.vip-box {
  background: #f3f3f3;
  padding-bottom: 20rpx;
}

.h1 {
  font-size: 48rpx;
  color: #2f2f2f;
  text-align: center;
  line-height: 2.5;
  display: block;
  background: #fff;
}

.swiper {
  height: 130px;
}

.goods-box {
  width: 90%;
  margin: 0 auto;
  margin-top: 30rpx;
}

.goods-box::after {
  content: '';
  display: block;
  clear: both;
}

.goods-list {
  width: 48%;
  float: left;
  margin-bottom: 4%;
}

.goods-list:nth-of-type(2n) {
  float: right;
}

.goods-list image {
  display: block;
  width: 100%;
  height: 230rpx;
  border-top-right-radius: 15rpx;
  border-top-left-radius: 15rpx;
}

.goods-list text {
  display: block;
  text-align: center;
  padding: 10rpx;
  background: #fff;
  line-height: 2;
  font-size: 28rpx;
  color: #ff5b62;
  border-radius: 10rpx;
}
